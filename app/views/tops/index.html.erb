<% provide(:title, "Top Page") %>

<div class="center jumbotron">
  <div class="banner">
    <%= image_tag ("skyline_darker.jpg") %>
  </div>

  <h2>Total jobs: <%= Job.count %></h2>

  <div class="search"></div>

  <div class="lastest_jobs">
    <h3>Latest jobs</h3>

    <div>
      <%= render partial: "jobs/job", collection: @jobs %>
    </div>
    <%= paginate @jobs %>
  </div>

  <div class="top_cities">
    <%= render partial: "shared/top_cities" %>
  </div>

  <div class="top_industries">
    <%= render partial: "shared/top_industries"%>
  </div>
</div>
